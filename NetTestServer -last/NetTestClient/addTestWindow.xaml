<Window x:Class="NetTestClient.addTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetTestClient"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="addTestWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="23" Margin="42,10,0,0" TextWrapping="Wrap" Text="Admin" VerticalAlignment="Top" Width="74"/>
        <PasswordBox x:Name="txtPass" Password="123" HorizontalAlignment="Left" Margin="159,12,0,0" VerticalAlignment="Top" Width="74"/>
        <Button x:Name="btUpload" Content="试题上传" HorizontalAlignment="Left" Margin="253,111,0,0" VerticalAlignment="Top" Width="75" Click="btUpload_Click"/>
        <TextBlock x:Name="txtMsg" HorizontalAlignment="Left" Margin="253,152,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="0.978,2.118"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,11,0,0" TextWrapping="Wrap" Text="用户" VerticalAlignment="Top" RenderTransformOrigin="0.978,2.118"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="121,14,0,0" TextWrapping="Wrap" Text="密码" VerticalAlignment="Top" RenderTransformOrigin="0.978,2.118"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Height="23" Margin="42,39,0,0" TextWrapping="Wrap" Text="XML序列化" VerticalAlignment="Top" Width="191"/>
        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="标题" VerticalAlignment="Top" RenderTransformOrigin="0.978,2.118"/>
        <TextBox x:Name="txtText" HorizontalAlignment="Left" Height="116" Margin="16,67,0,0" VerticalAlignment="Top" Width="217" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <ComboBox x:Name="cbAnswer" HorizontalAlignment="Left" Margin="282,67,0,0" VerticalAlignment="Top" Width="55"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="253,67,0,0" TextWrapping="Wrap" Text="答案" VerticalAlignment="Top" RenderTransformOrigin="0.978,2.118"/>
    </Grid>
</Window>
