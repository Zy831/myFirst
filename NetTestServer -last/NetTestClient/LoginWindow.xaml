<Window x:Class="NetTestClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetTestClient"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="35" Margin="199,124,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150"/>
        <Label Content="用户名：" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="35" Margin="130,124,0,0" VerticalAlignment="Top" Width="50"/>
        <Label Content="密码：" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="35" Margin="130,182,0,0" VerticalAlignment="Top" Width="50"/>
        <PasswordBox x:Name="txtPass" HorizontalAlignment="Left" Height="35" Margin="199,182,0,0" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="btLogin" Content="登录与注册" HorizontalAlignment="Left" Height="32" Margin="164,245,0,0" VerticalAlignment="Top" Width="137" Click="btLogin_Click"/>
    </Grid>
</Window>
