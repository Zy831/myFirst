<Window x:Class="NetTestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetTestClient"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="23" Margin="75,49,0,0" TextWrapping="Wrap" Text="user" VerticalAlignment="Top" Width="74"/>
        <PasswordBox x:Name="txtPass" Password="123" Height="23" HorizontalAlignment="Left" Margin="75,77,0,0" VerticalAlignment="Top" Width="74"/>
        <Button x:Name="btLogin" Content="注册登录" HorizontalAlignment="Left" Margin="172,80,0,0" VerticalAlignment="Top" Width="75" Click="btLogin_Click"/>
        <TextBlock x:Name="txtMsg" HorizontalAlignment="Left" Margin="172,50,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="0.978,2.118"/>
        <Label x:Name="label" Content="用户" HorizontalAlignment="Left" Margin="17,47,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="密码" HorizontalAlignment="Left" Margin="17,72,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btManager" Content="试题管理" HorizontalAlignment="Left" Margin="17,115,0,0" VerticalAlignment="Top" Width="75" Click="btManager_Click"/>
        <Button x:Name="btMark" Content="成绩管理" HorizontalAlignment="Left" Margin="131,115,0,0" VerticalAlignment="Top" Width="75" Click="btMark_Click"/>
        <Button x:Name="btTest" Content="测试练习" HorizontalAlignment="Left" Margin="233,115,0,0" VerticalAlignment="Top" Width="75" Click="btTest_Click"/>
        <Label x:Name="label2" Content="服务器" HorizontalAlignment="Left" Margin="17,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbUrl" HorizontalAlignment="Left" Height="23" Margin="75,20,0,0" TextWrapping="Wrap" Text="http://localhost:8733/NetTestServer" VerticalAlignment="Top" Width="233"/>
    </Grid>
</Window>
